{
  "name": "<%= themeName %>",
  "version": "3.0.0",
  "scripts": {
    "gulp": "gulp",
    "gulp:clean": "gulp clean",
    "gulp:compress": "gulp compress",
    "gulp:styleguide": "gulp styleguide",
    "lint:scss:theme": "stylelint \"templates/**/*.scss\" --syntax scss --fix --cache --cache-location \"~/.stylelintcache/\"",
    "lint:js:theme": "eslint \"templates/**/*.js",
    "lint:scss:components": "stylelint \"components/**/*.scss\" --syntax scss --fix --cache",
    "lint:js:components": "eslint \"components/**/*.js",
    "lint:scss": "npm run lint:scss:theme && npm run lint:scss:components",
    "lint:js": "npm run lint:js:theme && npm run lint:js:components",
    "lint": "npm run lint:scss && npm run lint:js",
    "build:kss": "kss --source \"templates/\" --css \"../assets/css/styles.css\" --destination \"styleguide\" --homepage \"styleguide.md\" --builder \"styleguide/template\" --title \"Style guide\"",
    "build:sprite": "svg-sprite -p 2 -c --cscss --css-render-scss-dest='../templates/sprite/_sprite.scss' templates/sprite/icons/*.svg --cs='../templates/sprite/sprite.css.svg'",
    "build:js:components": "babel components/ --out-dir components/",
    "build:js:theme": "babel templates/ --out-dir templates/",
    "build:js": "npm run build:js:components && npm run build:js:theme",
    "build:css:components": "node-sass --recursive \"components/\" --output \"components/\" --output-style=compressed --source-map true",
    "build:css:theme": "node-sass --recursive \"templates/\" --output \"templates/\" --output-style=compressed --source-map true",
    "build:css": "npm run build:css:components && npm run build:css:theme",
    "build": "npm run build:sprite && npm run build:js && npm run build:css",
    "watch:js": "nodemon --ext js -x \"npm run build:js\"",
    "watch:scss": "node-sass --watch --recursive \"templates/\" --output \"assets/css/\" --output-style=compressed --source-map true",
    "watch": "npm run watch:comb && npm run jshint && npm run watch:scss"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "IE >= 9",
              "last 3 versions"
            ]
          },
          "useBuiltIns": "usage"
        }
      ]
    ],
    "sourceMaps": true
  },
  "browserslist": [
    "IE >= 9",
    "last 3 versions"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-arrow-functions": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "del": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-imagemin": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "kss": "^3.0.0",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "run-sequence": "^2.0.0",
    "stylelint": "^13.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "svg-sprite": "^1.5.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3"
  }
}
